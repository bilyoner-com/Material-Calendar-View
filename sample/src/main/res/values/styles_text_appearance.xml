<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SampleLabelTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_two</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="SampleLabelTextStyle.MonthName">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="SampleLabelTextStyle.DayAbbreviation">
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="SampleLabelTextStyle.CurrentMonthDay">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="SampleLabelTextStyle.AnotherMonthDay">
        <item name="android:fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="SampleLabelTextStyle.Today">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="SampleLabelTextStyle.SelectedDay">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="SampleLabelTextStyle.DisabledDay">
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textColor">#66262626</item>
    </style>

</resources>
