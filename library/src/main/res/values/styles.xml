<resources>

    <style name="LabelTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LabelTextStyle.DialogButton">
        <item name="android:textColor">@color/daysLabelColor</item>
    </style>

    <style name="LabelTextStyle.DialogButton.Disabled">
        <item name="android:textColor">@color/disabledDialogButtonColor</item>
    </style>

    <style name="LabelTextStyle.MonthName">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LabelTextStyle.DayAbbreviation">
        <item name="android:textColor">@color/daysLabelColor</item>
    </style>

    <style name="LabelTextStyle.CurrentMonthDay">
        <item name="android:textColor">@color/currentMonthDayColor</item>
    </style>

    <style name="LabelTextStyle.AnotherMonthDay">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/anotherMonthDayColor</item>
    </style>

    <style name="LabelTextStyle.Today">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/headerColor</item>
    </style>

    <style name="LabelTextStyle.SelectedDay">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/headerColor</item>
    </style>

    <style name="LabelTextStyle.DisabledDay">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/disabledDayColor</item>
    </style>

</resources>
