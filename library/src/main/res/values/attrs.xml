<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="CalendarView">
        <attr name="pagesColor" format="color" />
        <attr name="dialogButtonTextAppearance" format="reference" />
        <attr name="headerVisibility" format="integer" />
        <attr name="headerBackgroundColor" format="color" />
        <attr name="previousButtonSrc" format="integer" />
        <attr name="forwardButtonSrc" format="integer" />
        <attr name="monthNames" format="reference" />
        <attr name="monthNameTextAppearance" format="reference" />
        <attr name="dayNames" format="reference" />
        <attr name="dayNamesBarColor" format="color" />
        <attr name="dayNameTextAppearance" format="reference" />
        <attr name="currentMonthDayBackgroundSrc" format="integer" />
        <attr name="currentMonthTextAppearance" format="reference" />
        <attr name="anotherMonthDayBackgroundSrc" format="integer" />
        <attr name="anotherMonthDayTextAppearance" format="reference" />
        <attr name="todayBackgroundSrc" format="integer" />
        <attr name="todayTextAppearance" format="reference" />
        <attr name="selectedDayBackgroundSrc" format="integer" />
        <attr name="selectedDayTextAppearance" format="reference" />
        <attr name="disabledDayBackgroundSrc" format="integer" />
        <attr name="disabledDayTextAppearance" format="reference" />
        <attr name="eventsEnabled" format="boolean" />
        <attr name="type" />
    </declare-styleable>

    <attr name="type" format="enum">
        <enum name="classic" value="0" />
        <enum name="one_day_picker" value="1" />
        <enum name="many_days_picker" value="2" />
        <enum name="range_picker" value="3" />
    </attr>
</resources>
